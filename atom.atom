---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title>mZero</title>
  <link href="http://mzero.co/"/>
  <link type="application/atom+xml" rel="self" href="http://mzero.co/atom.atom"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://mzero.co/</id>
  <author>
    <name>Lourenco de Azevedo</name>
    <email>lourencoazevedo@devagar.org</email>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>http://mzero.co{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="http://mzero.co{{ post.url }}"/>
    <title>{{ post.title }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>"Lourenco de Azevedo"</name>
      <uri>http://mzero.co</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
 
</feed>